<h2>Profile</h2>
<div style="overflow: hidden;"> 
  <div class="one-col">
    <img src="http://placekitten.com/100/100" width="100" height="100" alt="Profile picture for {{ fullName }}">
  </div> 
  <div class="four-col last-col">
    <div style="font-size: large; margin-bottom: 0.5em;">{{ fullName }}</div>
    <div>{{ email }}</div>
  </div>
</div>
<div>
  <span>
    <a class="button--secondary" href="/settings">
      <span class="external">Edit account</span>
    </a>
  </span>
  <span>
    <button class="button--secondary" href="/logout">Logout</button>
  </span>
</div>
